{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    },
    {
      "matchPackagePatterns": ["^flutter"],
      "groupName": "Flutter packages"
    },
    {
      "matchPackagePatterns": ["^firebase"],
      "groupName": "Firebase packages"
    }
  ],
  "schedule": [
    "before 10am on monday"
  ],
  "labels": ["dependencies"],
  "assignees": ["@team"],
  "reviewers": ["@team"]
}
